<div class="container">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
      <h2 class="form-signin-heading">Sign in</h2>

      <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email address', mouseev: 'true', autocomplete: 'off', keyev: 'true', clickev: 'true' %>

      <%= f.password_field :password, class: 'form-control', placeholder: 'Password', mouseev: 'true', autocomplete: 'off', keyev: 'true', clickev: 'true' %>

      <% if devise_mapping.rememberable? -%>
          <label class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></label>
      <% end -%>

      <div><%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %></div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>