<%= form_for(@user, :url => registration_path(@user), :html => {:class => 'form-signin'}) do |f| %>

    <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Your email', mouseev: 'true', autocomplete: 'off', keyev: 'true', clickev: 'true' %>
    <br/>

    <%= f.password_field :password, class: 'form-control', placeholder: 'Create a password', mouseev: 'true', autocomplete: 'off', keyev: 'true', clickev: 'true' %>
    <br/>

    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', mouseev: 'true', autocomplete: 'off', keyev: 'true', clickev: 'true' %>
    <br/>

    <div><%= f.submit 'Register', class: 'btn btn-lg btn-primary btn-block' %></div>
<% end %>

